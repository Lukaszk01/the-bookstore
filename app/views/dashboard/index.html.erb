<div class="container">
<h2>Your books</h2>
    <div class="d-flex justify-content-between col-12 col-md-6 col-lg-4">
        <div class="row">
      <% @books.each do |book| %>
      <%= book.title %>
      <%= book.genre %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h2>Your Authors</h2>
    <div class="d-flex justify-content-between col-12 col-md-6 col-lg-4">
      <div class="row">
        <ul><% @authors.each do |author| %>
          <ol><%= author.name %></ol>
        </ul>
      <% end %>
    </div>
  </div>
</div>
