<div class="text-center">
  <h2>Your books</h2>
</div>

<div class="row justify-content-between">
  <% @books.each do |book| %>
  <% @authors.each do |author| %>
<div class="card">
      <%= book.title %>
      <%= book.genre %>
      <%= author.name %>
      <%= link_to 'Find more', author %>
    </div>
<% end %>
<% end %>
 </div>
