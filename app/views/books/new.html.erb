<div class="container text-left">
     <h2>New book</h2>
  <div class="justify-content-center text-left ml-4">
      <%= simple_form_for(:book) do |f| %>
      <div class="form">
        <%= f.input :title %>
      <%= f.input :genre %>
      <%= f.input :photo, as: :file, label: ('Upload cocktail photo').html_safe %>
      <div class="mt-4 mb-4">
       <%= f.submit class: "button" %>
      </div>
      <% end %>
      </div>


      <div class="button">
        <%= link_to 'back', authors_path  %>
      </div>

  </div>
</div>




